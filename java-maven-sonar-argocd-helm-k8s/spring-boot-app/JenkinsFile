pipeline {
  agent {
    docker {
      image 'maven:3.8.6-openjdk-11'
      // override ENTRYPOINT so Jenkins can run commands, and force DNS so container can resolve Maven Central
      args '--entrypoint="" --dns=8.8.8.8 --dns=8.8.4.4'
    }
  }

  environment {
    // put any global env vars here if needed
  }

  stages {
    stage('Checkout') {
      steps {
        // keep it simple - pipeline will already checkout SCM in Declarative jobs
        sh 'echo "checkout stage - workspace:" && pwd && ls -la'
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          set -eux
          cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
          mvn -B -DskipTests=false clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://54.205.188.149:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            set -eux
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            mvn -B sonar:sonar -Dsonar.login=${SONAR_AUTH_TOKEN} -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "abhishekf5/ultimate-cicd:${BUILD_NUMBER}"
      }
      steps {
        script {
          sh '''
            set -eux
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            docker build -t ${DOCKER_IMAGE} .
          '''
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            dockerImage.push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
        GIT_USER_NAME = "singh-pranjal"
      }
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            set -eux
            git config user.email "pranjalsingh2001@gmail.com"
            git config user.name "singh-pranjal"
            BUILD_NUMBER=${BUILD_NUMBER}
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || true
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }
  } // end stages

  post {
    always {
      echo "Pipeline finished with status: ${currentBuild.currentResult}"
    }
    success {
      echo "Build successful: ${env.BUILD_NUMBER}"
    }
    failure {
      echo "Build failed. Check console output for errors."
    }
  }
}
